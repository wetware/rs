package wetware:streams;

/// Interface for managing data streams.
interface streams {
    /// A bidirectional connection resource that provides access to input and output streams.
    resource connection {
        /// Get the input stream handle for reading data from the host.
        /// Returns a u32 handle that can be used with wasi:io/streams APIs.
        get-input-stream-handle: func() -> u32;
        
        /// Get the output stream handle for writing data to the host.
        /// Returns a u32 handle that can be used with wasi:io/streams APIs.
        get-output-stream-handle: func() -> u32;
    }

    /// Create a new connection resource with bidirectional streams.
    create-connection: func() -> connection;
}

world streams-world {
    export streams;
}

